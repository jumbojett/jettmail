<?xml version="1.0" encoding="UTF-8"?>
<plugin_manifest xmlns="http://www.elgg.org/plugin_manifest/1.8">
	<name>Jett Mail</name>
	<author>Michael Jett</author>
	<version>2.0</version>
	<description>Adds an option in the Settings &gt; Notifications page. This will give users options to cache their emails and then send out a big one daily.
        Make sure /pg/cron/daily is being hit by the crontab.
	</description>
	<category>enhancement</category>
	<category>mail</category>
	<website>http://www.mitre.org/</website>
	<copyright>MITRE</copyright>
	<license>http://www.gnu.org/licenses/old-licenses/gpl-2.0.html GNU Public License version 2</license>
    <requires>
        <type>elgg_release</type>
        <version>1.8</version>
    </requires>
    <requires>
		<type>plugin</type>
		<name>notifications</name>
	</requires>
	<requires>
		<type>priority</type>
		<plugin>notifications</plugin>
		<priority>before</priority>
	</requires>
</plugin_manifest>
